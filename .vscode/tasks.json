                    "beginsPattern": "^.*?started server.*?$",
                    "endsPattern": "^.*?ready in.*?$"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Next: Build",
