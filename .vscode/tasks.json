            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Next: Start",
            "type": "npm",
            "script": "start",
            "problemMatcher": []
        },
        {
            "label": "Kill Port 3000",
            "type": "shell",
            "command": "npx kill-port 3000",
            "problemMatcher": []
        },
        {
            "label": "Clean and Start Dev",
            "dependsOrder": "sequence",
            "dependsOn": ["Kill Port 3000", "Next: Dev"],
            "problemMatcher": []
        }
